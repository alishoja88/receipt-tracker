              "raw": "{{BASE_URL}}/receipts?page=1&limit=20",
              "host": ["{{BASE_URL}}"],
              "path": ["receipts"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
